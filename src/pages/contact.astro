---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us - Justice Forward Law";
const pageDescription = "Reach out to Justice Forward Law for expert legal guidance. Our team is dedicated to advancing justice with insightful counsel. Contact us today to discuss your needs.";
const contactInfo = [
  { icon: "fas fa-map-marker-alt", label: "Address", value: "123 Justice Avenue, Suite 400, Metropolis, ST 12345" },
  { icon: "fas fa-phone-alt", label: "Phone", value: "(555) 123-4567" },
  { icon: "fas fa-envelope", label: "Email", value: "info@justiceforwardlaw.com" },
  { icon: "fas fa-clock", label: "Office Hours", value: "Monday - Friday, 9:00 AM - 5:00 PM" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    {/* Hero Section */}
    <div class="relative bg-gradient-to-r from-[#990000] to-[#660000] py-24 overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-6 tracking-tight">
            Contact Us
          </h1>
          <p class="text-xl md:text-2xl text-amber-100 font-light max-w-2xl mx-auto">
            Advancing Justice with Expert Legal Insight
          </p>
        </div>
      </div>
    </div>

    {/* Contact Information Section */}
    <section class="py-16 md:py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#333333] mb-6">
              Get in Touch
            </h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
              At <span class="font-serif font-bold text-[#990000]">Justice Forward Law</span>, we are committed to providing authoritative legal insight and advancing justice for our clients. Whether you need consultation on complex matters or representation, our expert team is here to assist.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            {/* Contact Info Cards */}
            <div class="space-y-8">
              {contactInfo.map((info, index) => (
                <div 
                  key={index} 
                  class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:shadow-xl hover:-translate-y-1 border border-gray-100"
                >
                  <div class="flex items-start">
                    <div class="flex-shrink-0 bg-[#990000] text-white rounded-lg p-3 mr-4">
                      <i class={`${info.icon} text-xl`}></i>
                    </div>
                    <div>
                      <h3 class="text-lg font-serif font-semibold text-[#333333] mb-2">{info.label}</h3>
                      <p class="text-gray-600 leading-relaxed">{info.value}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>

            {/* Contact Form */}
            <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
              <h3 class="text-2xl font-serif font-bold text-[#333333] mb-6">Schedule a Consultation</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">
                Fill out the form below or call us directly to arrange an appointment. We respond to inquiries within 24 hours. Your privacy is our priority.
              </p>
              
              <form class="space-y-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#990000] focus:border-[#990000] transition"
                    placeholder="Your name"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                  <input 
                    type="email" 
                    id="email" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#990000] focus:border-[#990000] transition"
                    placeholder="your.email@example.com"
                  />
                </div>
                
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#990000] focus:border-[#990000] transition"
                    placeholder="(555) 123-4567"
                  />
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                  <textarea 
                    id="message" 
                    rows="4" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#990000] focus:border-[#990000] transition"
                    placeholder="How can we assist you?"
                  ></textarea>
                </div>
                
                <button 
                  type="submit" 
                  class="w-full bg-[#990000] hover:bg-[#660000] text-white font-serif font-semibold py-3 px-6 rounded-lg transition duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#990000]"
                >
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Map Section */}
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#333333] text-center mb-12">
            Our Location
          </h2>
          <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="h-96 bg-gradient-to-r from-[#990000] to-[#660000] flex items-center justify-center">
              <div class="text-center text-white">
                <i class="fas fa-map-marker-alt text-5xl mb-4"></i>
                <p class="text-xl font-serif">123 Justice Avenue, Suite 400</p>
                <p class="text-lg mt-2">Metropolis, ST 12345</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-16 bg-gradient-to-r from-[#333333] to-[#1a1a1a]">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
            Ready to Discuss Your Case?
          </h2>
          <p class="text-xl text-amber-100 mb-8 max-w-2xl mx-auto">
            Our legal team is ready to provide you with the expert guidance you deserve.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a 
              href="tel:(555)123-4567" 
              class="bg-[#990000] hover:bg-[#660000] text-white font-serif font-semibold py-3 px-8 rounded-lg transition duration-300 transform hover:scale-105"
            >
              Call Now
            </a>
            <a 
              href="mailto:info@justiceforwardlaw.com" 
              class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-[#333333] font-serif font-semibold py-3 px-8 rounded-lg transition duration-300"
            >
              Email Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .transition-all {
    transition: all 0.3s ease;
  }
  
  .hover\:translate-y-1:hover {
    transform: translateY(-4px);
  }
  
  .hover\:scale-105:hover {
    transform: scale(1.05);
  }
  
  .border-gray-100 {
    border-color: #f3f4f6;
  }
  
  .bg-gradient-to-br {
    background: linear-gradient(135deg, #f0f0f0 0%, #e5e5e5 100%);
  }
  
  .text-amber-100 {
    color: #f5f5dc;
  }
  
  .bg-[#990000] {
    background-color: #990000;
  }
  
  .bg-[#333333] {
    background-color: #333333;
  }
  
  .text-[#990000] {
    color: #990000;
  }
  
  .text-[#333333] {
    color: #333333;
  }
  
  .font-serif {
    font-family: Georgia, serif;
  }
  
  .hover\:bg-[#660000]:hover {
    background-color: #660000;
  }
  
  .focus\:ring\:focus\:ring-[#990000]:focus {
    box-shadow: 0 0 0 3px rgba(153, 0, 0, 0.5);
  }
  
  .focus\:ring-offset-2:focus {
    box-shadow: 0 0 0 2px #fff, 0 0 0 4px rgba(153, 0, 0, 0.5);
  }
  
  .bg-gradient-to-r {
    background: linear-gradient(90deg, #990000, #660000);
  }
  
  .bg-gradient-to-br {
    background: linear-gradient(135deg, #990000 0%, #660000 100%);
  }
  
  .shadow-lg {
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .shadow-xl {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>