---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Home - Legal Edge Insights";
const pageDescription = "Discover sharp legal insights tailored for professionals and curious readers. Explore in-depth articles, expert analyses, and the latest trends in law with our contemporary professional platform.";

const features = [
  {
    title: "Expert Analyses",
    description: "In-depth breakdowns of landmark cases, regulatory changes, and emerging trends.",
    icon: "fas fa-search-dollar"
  },
  {
    title: "Practical Guides",
    description: "Step-by-step advice on topics like contract law, intellectual property, and compliance.",
    icon: "fas fa-book-open"
  },
  {
    title: "Industry News",
    description: "Timely updates on legal developments that impact your practice or business.",
    icon: "fas fa-newspaper"
  }
];

const testimonials = [
  {
    quote: "This platform has transformed how I approach legal challenges. The insights are invaluable.",
    author: "Sarah Johnson",
    role: "Partner, Morrison & Associates"
  },
  {
    quote: "I trust Legal Edge Insights for the most current legal trends. Their analysis is always spot-on.",
    author: "Michael Chen",
    role: "General Counsel, TechNova Inc."
  },
  {
    quote: "The practical guides have saved me countless hours in my practice. A must-read resource.",
    author: "Emma Rodriguez",
    role: "Solo Practitioner"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-primary to-accent text-white overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-10"></div>
    <div class="container mx-auto px-4 py-24 md:py-32 relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-6">
          Welcome to Legal Edge Insights
        </h1>
        <p class="text-xl md:text-2xl font-light mb-8 max-w-2xl">
          Sharp Legal Insights for Professionals and Readers Alike
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="bg-white text-primary hover:bg-gray-100 font-semibold py-3 px-8 rounded-lg transition duration-300 transform hover:-translate-y-1">
            Explore Articles
          </button>
          <button class="bg-transparent border-2 border-white hover:bg-white/10 font-semibold py-3 px-8 rounded-lg transition duration-300">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Introduction Section -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6">Navigating Legal Complexity with Clarity</h2>
        <div class="w-24 h-1 bg-accent mx-auto mb-8"></div>
        <p class="text-lg text-gray-600 leading-relaxed">
          In today's fast-evolving legal landscape, staying ahead requires more than just knowledgeâ€”it demands precision and foresight. 
          At <span class="font-semibold text-primary">Legal Edge Insights</span>, we deliver concise, actionable content that bridges the gap between complex legal concepts and practical application. 
          Whether you're a seasoned attorney, a business leader, or an informed reader, our platform empowers you with the tools to navigate legal challenges effectively.
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">What We Offer</h2>
        <div class="w-24 h-1 bg-accent mx-auto mb-6"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">Comprehensive resources designed to enhance your legal expertise</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div 
            class="bg-gray-50 rounded-xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100"
            key={index}
          >
            <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-2xl text-primary`}></i>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Trusted by Legal Professionals</h2>
        <div class="w-24 h-1 bg-accent mx-auto mb-6"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">Hear from industry experts who rely on our insights</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div 
            class="bg-white rounded-xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100"
            key={index}
          >
            <div class="text-accent mb-4">
              <i class="fas fa-quote-left text-3xl"></i>
            </div>
            <p class="text-gray-600 mb-6 italic">"{testimonial.quote}"</p>
            <div>
              <p class="font-semibold text-gray-800">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Stay Ahead of Legal Trends</h2>
      <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
        Join thousands of legal professionals who rely on our insights to make informed decisions
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-primary hover:bg-gray-100 font-semibold py-3 px-8 rounded-lg transition duration-300 transform hover:-translate-y-1">
          Get Started Today
        </button>
        <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-semibold py-3 px-8 rounded-lg transition duration-300">
          View Latest Articles
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .delay-100 {
    animation-delay: 0.1s;
  }

  .delay-200 {
    animation-delay: 0.2s;
  }

  .delay-300 {
    animation-delay: 0.3s;
  }

  .delay-400 {
    animation-delay: 0.4s;
  }

  .delay-500 {
    animation-delay: 0.5s;
  }

  .delay-600 {
    animation-delay: 0.6s;
  }
</style>