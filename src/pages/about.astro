---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About Justice Forward Law";
const pageDescription = "Discover the mission, expertise, and commitment of Justice Forward Law, where we advance justice through authoritative legal insight and dedicated advocacy.";

const values = [
  {
    icon: "fas fa-balance-scale",
    title: "Excellence",
    description: "We strive for the highest standards in all aspects of our practice."
  },
  {
    icon: "fas fa-heart",
    title: "Empathy",
    description: "We understand and care about the human side of every case."
  },
  {
    icon: "fas fa-shield-alt",
    title: "Advocacy",
    description: "We fight tirelessly for our clients' rights and interests."
  }
];

const missionPoints = [
  "Provide strategic, client-centered solutions tailored to your unique needs.",
  "Uphold the highest standards of ethical practice and professional integrity.",
  "Drive forward positive change through informed legal strategies and community engagement."
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    {/* Hero Section */}
    <section class="relative py-24 md:py-32 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-[#990000] to-[#660000] opacity-90"></div>
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6">
            About Justice Forward Law
          </h1>
          <p class="text-xl md:text-2xl text-gray-100 mb-8 font-light">
            Advancing Justice with Expert Legal Insight
          </p>
          <div class="w-24 h-1 bg-white mx-auto mb-10"></div>
          <p class="text-lg text-gray-200 max-w-2xl mx-auto leading-relaxed">
            We are more than a legal firmâ€”we are a beacon of integrity and innovation in the pursuit of justice.
          </p>
        </div>
      </div>
    </section>

    {/* Mission Section */}
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#333333] mb-4">Our Mission</h2>
            <div class="w-16 h-1 bg-[#990000] mx-auto"></div>
          </div>
          
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            {values.map((value, index) => (
              <div key={index} class="text-center p-6 rounded-xl hover:shadow-lg transition-shadow duration-300 bg-gray-50 border border-gray-100">
                <div class="w-16 h-16 bg-[#990000] rounded-full flex items-center justify-center mx-auto mb-6">
                  <i class={`${value.icon} text-white text-2xl`}></i>
                </div>
                <h3 class="text-xl font-serif font-semibold text-[#333333] mb-3">{value.title}</h3>
                <p class="text-gray-600 leading-relaxed">{value.description}</p>
              </div>
            ))}
          </div>
          
          <div class="prose prose-lg max-w-none text-center">
            <p class="text-xl text-[#333333] mb-6 leading-relaxed">
              We believe that access to expert legal guidance should empower individuals, businesses, and communities to thrive.
            </p>
            <p class="text-lg text-gray-700 mb-10">
              Our mission is to:
            </p>
            
            <ul class="grid md:grid-cols-1 gap-4 max-w-2xl mx-auto">
              {missionPoints.map((point, index) => (
                <li key={index} class="flex items-start">
                  <div class="w-6 h-6 bg-[#990000] rounded-full flex items-center justify-center flex-shrink-0 mt-1 mr-4">
                    <i class="fas fa-check text-white text-xs"></i>
                  </div>
                  <span class="text-gray-700 text-lg">{point}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    {/* Team Section */}
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#333333] mb-4">Our Commitment</h2>
          <div class="w-16 h-1 bg-[#990000] mx-auto"></div>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="md:flex">
              <div class="md:w-1/2 p-8 md:p-12">
                <h3 class="text-2xl font-serif font-bold text-[#333333] mb-4">Dedicated Advocacy</h3>
                <p class="text-gray-700 mb-6 leading-relaxed">
                  Our team of seasoned attorneys brings a wealth of experience and a commitment to excellence that 
                  sets us apart in the legal community. We approach each case with the meticulous attention to detail 
                  and strategic thinking required for successful outcomes.
                </p>
                <p class="text-gray-700 mb-6 leading-relaxed">
                  Beyond representing our clients in court, we work to create lasting positive impact in our communities 
                  through educational initiatives, pro bono work, and partnerships with organizations dedicated to justice.
                </p>
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-[#990000] rounded-full flex items-center justify-center mr-4">
                    <i class="fas fa-award text-white"></i>
                  </div>
                  <p class="text-gray-700 font-medium">Award-winning legal representation</p>
                </div>
              </div>
              <div class="md:w-1/2 bg-gradient-to-br from-[#990000] to-[#333333] p-8 md:p-12 flex items-center justify-center">
                <div class="text-center">
                  <i class="fas fa-users text-white text-5xl mb-4"></i>
                  <h4 class="text-2xl font-serif font-bold text-white mb-2">Expert Legal Team</h4>
                  <p class="text-gray-200">Trusted by hundreds of clients nationwide</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Call to Action */}
    <section class="py-20 bg-gradient-to-r from-[#990000] to-[#660000] text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-6">Ready to Advance Your Justice?</h2>
        <p class="text-xl max-w-2xl mx-auto mb-10 text-gray-100">
          Let our expert team guide you through complex legal challenges with precision and dedication.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/contact" class="px-8 py-4 bg-white text-[#990000] font-medium rounded-lg hover:bg-gray-100 transition-colors duration-300 shadow-lg">
            Schedule Consultation
          </a>
          <a href="/practice-areas" class="px-8 py-4 bg-transparent border-2 border-white text-white font-medium rounded-lg hover:bg-white/10 transition-colors duration-300">
            Explore Our Practice Areas
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .delay-100 {
    animation-delay: 0.1s;
  }

  .delay-200 {
    animation-delay: 0.2s;
  }

  .delay-300 {
    animation-delay: 0.3s;
  }
</style>